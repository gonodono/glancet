<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/spacing"
    tools:ignore="HardcodedText,Overdraw">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@id/item_3"
            android:layout_alignBottom="@id/item_3"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:text="#0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@id/item_2"
            android:layout_alignBottom="@id/item_2"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:text="#0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@id/item_1"
            android:layout_alignBottom="@id/item_1"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:text="#0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@id/item_0"
            android:layout_alignBottom="@id/item_0"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/item_background"
            android:gravity="center"
            android:text="#0"
            android:textColor="@color/black" />

    </RelativeLayout>

    <include layout="@layout/control_panel" />

</LinearLayout>